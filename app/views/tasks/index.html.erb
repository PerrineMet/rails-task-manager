<% @tasks.each do |task|%>
  <h2><%= link_to task.name, task_path(task) %></h2>
  <p><%= link_to "Edit", edit_task_path(task) %>
  <%= link_to "Delete", task_path(task),
      method: :delete,
      data: { confirm: "Are you sure?" } %>
  <%= link_to "Create a new task", new_task_path %></p>
<% end %>


